<project>
    <macrodef name="make-clean-dir">
        <attribute name="dir"/>
        <sequential>
            <delete dir="@{dir}" quiet="true"/>
            <mkdir dir="@{dir}"/>
       </sequential>
    </macrodef>

    <macrodef name="move-folder">
        <attribute name="fromDir" />
        <attribute name="toDir" />
        <sequential>
            <move todir="@{toDir}">
              <fileset dir="@{fromDir}"/>
            </move>
        </sequential>
    </macrodef>

    <macrodef name="move-log-to-logDir">
        <attribute name="logFileToCopy" />
        <attribute name="newName" />
        <sequential>
            <move file="@{logFileToCopy}" tofile="${LOG.DIR}/@{newName}" quiet="true" failonerror="false"/>
        </sequential>
    </macrodef>
</project>
